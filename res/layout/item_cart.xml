<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="10dp" >
	
    <ImageView
        android:layout_marginLeft="15dp"
        android:id="@+id/iv_cart_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/cart_ico_del"
        android:visibility="gone"
         />

    <ImageView
        android:layout_toRightOf="@id/iv_cart_delete"
        android:layout_marginLeft="20dp"
        android:id="@+id/iv_cart_book"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:src="@drawable/touxiang" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_cart_book"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_cart_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="花千骨"
            android:textColor="@color/darkGrey"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cart_book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 ￥"
                android:textColor="@color/darkRed" />

            <TextView
                android:id="@+id/tv_cart_book_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="x2"
                android:textColor="@color/darkGrey" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/cart_bg_numberpicker"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_m_Number"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/cart_ico_m" />

        <TextView
            android:id="@+id/tv_cart_book_total_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_p_Number"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/cart_ico_p" />

    </LinearLayout>

</RelativeLayout>