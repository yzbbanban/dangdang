<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/wode_bg_header"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_mine_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="我的T-Book"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <com.wangban.dangdang.ui.CircleImageView
            android:id="@+id/login_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/tv_mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/login_photo"
            android:layout_toRightOf="@id/login_photo"
            android:text="雯雯"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
         >

        

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_my_collect"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/mine_ico_shoucang" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_my_collect"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="我收藏的商品" />
        </LinearLayout>

		<View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_gravity="right"
		    android:background="#eeeeee" />
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_my_address"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/mine_ico_address" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_my_address"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="我的地址管理" />
        </LinearLayout>

		<View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_gravity="right"
		    android:background="#eeeeee" />
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_my_order"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/mine_ico_order" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_my_order"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="我的订单" />
        </LinearLayout>

		<View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_gravity="right"
		    android:background="#eeeeee" />
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_my_settings"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/mine_ico_settings" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_my_settings"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="设置" />
        </LinearLayout>

		<View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_gravity="right"
		    android:background="#eeeeee" />
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_my_exit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/mine_ico_exit" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_my_exit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="退出登录" />
        </LinearLayout>

		<View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_gravity="right"
		    android:background="#eeeeee" />
		
    </LinearLayout>

</LinearLayout>