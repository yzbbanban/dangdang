<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookDetailActivity" >

    <RelativeLayout
        android:id="@+id/rl_book_detial"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shouye_bar_top" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="详情介绍"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_book_detail_introduse"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#99999999" >

        <ImageView
            android:id="@+id/iv_book_detial_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/touxiang" />

        <ImageView
            android:id="@+id/iv_book_detial"
            android:layout_width="85dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:layout_marginLeft="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/touxiang" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_alignBottom="@id/iv_book_detial"
            android:layout_alignTop="@id/iv_book_detial"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_book_detial"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_book_detial_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="花千骨"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_book_detial_author"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="作者：果果"
                android:textColor="#777777"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_book_detial_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="类别：仙侠言情"
                android:textColor="#777777"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_book_detial_publishedTime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="出版时间：2015/09"
                android:textColor="#777777"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_book_detial_publishing"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="出版社：北方妇女儿童出版社"
                android:textColor="#777777"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/tv_book_detial_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/iv_book_detial"
                android:gravity="center"
                android:text="56￥"
                android:textColor="#C7060F" />

            <Button
                android:id="@+id/btn_book_detial_collect"
                android:layout_width="46dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/xiangqing_button"
                android:text="收藏"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_rl_book_detail_introduse"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F8F6F2"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="内容简介"
        android:textColor="#6A6A6A" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="她是神"
            android:textColor="#515151"
            android:textSize="16sp" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp" >

        <Button
            android:id="@+id/btn_add_cart"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="@drawable/xiangqing_button"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="#ffffff" />
    </RelativeLayout>

</LinearLayout>